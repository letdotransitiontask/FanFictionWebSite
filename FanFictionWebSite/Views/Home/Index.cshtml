@model IEnumerable<FanFictionWebSite.Models.FanficInListViewModel>

@{ Layout = "_Layout";}

<style>
    h2 {
        text-overflow: ellipsis;
        overflow:hidden;
    }
</style>
<h1>New fanfics</h1>
<div class="row">
    <div class="row">
        @{
            foreach (var f in Model)
            {
                <div class="col-md-6">
                    <h2>@f.Name</h2>
                    <p>@f.Comments comments @if (f.Rating != -1) { 
                        <span>, rating:@f.Rating</span>
                    }</p>
                    <p>Category: @f.Category</p>
                    <p>@f.Description</p>
                    @Html.ActionLink("Read >>", "ViewChapter", "Fanfic", new { fanficId = f.Id, number = 0 }, new { @class = "btn btn-secondary" })
                </div>
            }
        }
    </div>
</div>
