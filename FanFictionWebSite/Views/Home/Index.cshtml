@model IEnumerable<FanFictionWebSite.Models.FanficInListViewModel>

@{ Layout = "_Layout";}

<style>
    h2 {
        text-overflow: ellipsis;
        overflow:hidden;
    }
</style>
<div class="row">
    <div class="col-md-2">
        <h2>Popular tags</h2>
        coming soon
    </div>
    <div class="container col-md-10">
        <div class="row justify-center">
            <h1 class="col">New fanfics</h1>
        </div>
        <div class="row">
            @{
                foreach (var f in Model)
                {
                    <div class="col-md-6">
                        <h2>@f.Name</h2>
                        <p>@f.Description</p>
                        @Html.ActionLink("Read >>", "ViewChapter", "Fanfic", new { fanficId = f.Id, number = 0}, new { @class = "btn btn-secondary" })
                    </div>
                }
            }
        </div>
    </div>
</div>
