@model FanFictionWebSite.Models.UsersListViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <style>
        .table td, th {
            text-align: center;
        }
    </style>
    <script language="JavaScript">
        function toggle(source) {
            checkboxes = document.getElementsByClassName('select-user-checkbox');
            for (var i = 0, n = checkboxes.length; i < n; i++) {
                checkboxes[i].checked = source.checked;
            }
        }
    </script>
</head>

<body>
    <form asp-action="ControlUser" method="post">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/Home/Index">Itransition task #4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index"></a>
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="unblock" class="btn btn-success" value="Unblock" />
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="block" class="btn btn-warning" value="Block" />
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="remove" class="btn btn-danger" value="Remove">
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="makeAdmin" class="btn btn-danger" value="Add to role admin">
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="makeUsualUser" class="btn btn-danger" value="Remove from role admin">
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="logout" class="btn btn-warning" value="Logout">
                    </li>
                </ul>
            </div>
        </nav>
        <div class="col-lg-10">
            <table class="table table-bordered">
                <thead class="thead-dark">

                    <tr>

                        <th scope="col"><input type="checkbox" class="js-selectall form-check-input" data-target=".js-selectall1" onclick="toggle(this)" />Select all</th>
                        <th scope="col">Id</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                    </tr>
                    @for (int i = 0; i < Model.UserFilters.Count; i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="UserFilters[i].IsSelected" class="form-check-input select-user-checkbox" />
                            </td>
                            <td>@Model.UserFilters[i].UserToFilter.Id</td>
                            <td>@Model.UserFilters[i].UserToFilter.UserName</td>
                            <td>@Model.UserFilters[i].UserToFilter.Email</td>
                            @{
                                if (Model.UserFilters[i].UserToFilter.Blocked)
                                {
                                    <td>Blocked</td>
                                }
                                else
                                {
                                    <td>Active</td>
                                }
                            }
                        </tr>
                    }
                </thead>
            </table>
        </div>

    </form>
</body>
</html>


